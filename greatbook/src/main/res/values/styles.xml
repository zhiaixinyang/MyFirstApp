<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.ExpandedTitle"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">26sp</item>
    </style>
    <!-- 可选择的Layout -->
    <style name="FlowLayoutItemTags">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="item_backgroundColor">#FFFFFF</item>
        <item name="item_selectedTextColor">#FFFFFF</item>
        <item name="item_selectedBackgroundColor">#49C120</item>
        <item name="item_textSize">13sp</item>
        <item name="item_horizontalSpacing">5dp</item>
        <item name="item_verticalSpacing">5dp</item>
        <item name="item_horizontalPadding">12dp</item>
        <item name="item_verticalPadding">3dp</item>
        <item name="item_radius">5dp</item>
        <item name="item_selectedStrokeColor">#49C120</item>
        <item name="item_strokeWidth">@dimen/flow_stroke_width</item>
        <item name="item_flowChooseable">true</item>
        <item name="item_singleLine">true</item>
        <item name="item_width">85</item>
        <item name="item_height">30</item>
    </style>

    <style name="FlowLayoutTags">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="item_textColor">#49C120</item>
        <item name="item_backgroundColor">#FFFFFF</item>
        <item name="item_selectedTextColor">#FFFFFF</item>
        <item name="item_selectedBackgroundColor">#49C120</item>
        <item name="item_textSize">13sp</item>
        <item name="item_horizontalSpacing">5dp</item>
        <item name="item_verticalSpacing">5dp</item>
        <item name="item_horizontalPadding">12dp</item>
        <item name="item_verticalPadding">3dp</item>
        <item name="item_radius">5dp</item>
        <item name="item_selectedStrokeColor">#49C120</item>
        <item name="item_strokeWidth">@dimen/flow_stroke_width</item>
        <item name="item_flowChooseable">true</item>
        <item name="item_singleLine">true</item>
        <item name="item_width">wrap_content</item>
        <item name="item_height">wrap_content</item>
    </style>

    <style name="FlowLayoutTags.SingleChoose" parent="FlowLayoutTags">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="item_textColor">#666666</item>
        <item name="item_backgroundColor">#ffffff</item>
        <item name="item_selectedTextColor">#ffffff</item>
        <item name="item_selectedBackgroundColor">#7289ff</item>
        <item name="item_radius">0dp</item>
        <item name="item_strokeColor">#939393</item>
        <item name="item_selectedStrokeColor">#939393</item>
        <item name="item_strokeWidth">@dimen/flow_stroke_width</item>
        <item name="item_horizontalSpacing">10dp</item>
        <!--这里设置固定大小,padding为0-->
        <item name="item_horizontalPadding">10dp</item>
        <item name="item_verticalPadding">5dp</item>
        <!--单位dp-->
        <item name="item_width">80</item>
        <item name="item_height">40</item>
        <!--限制tag显示长度,规则查看Textview-->
        <item name="item_maxEms">5</item>
        <!--单选-->
        <item name="item_flowChooseable">false</item>
    </style>

    <style name="FlowLayoutTags.FlowLayout" parent="FlowLayoutTags">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="item_textColor">@color/black</item>
        <item name="item_backgroundColor">#ffffff</item>
        <item name="item_selectedTextColor">@color/black</item>
        <item name="item_selectedBackgroundColor">@color/trans_gray</item>
        <item name="item_radius">0dp</item>
        <item name="item_strokeColor">@color/trans_gray</item>
        <item name="item_selectedStrokeColor">@color/trans_gray</item>
        <item name="item_strokeWidth">@dimen/flow_stroke_width</item>
        <item name="item_horizontalSpacing">10dp</item>
        <!--这里设置固定大小,padding为0-->
        <item name="item_horizontalPadding">10dp</item>
        <item name="item_verticalPadding">5dp</item>
        <!--单位dp-->
        <item name="item_width">wrap_content</item>
        <item name="item_height">wrap_content</item>
        <!--限制tag显示长度,规则查看Textview-->
        <item name="item_maxEms">5</item>
        <!--多选-->
        <item name="item_flowChooseable">false</item>
    </style>

    <style name="FlowLayoutTags.ItemChoose" parent="FlowLayoutTags">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="item_textColor">#666666</item>
        <item name="item_backgroundColor">#ffffff</item>
        <item name="item_selectedTextColor">#ffffff</item>
        <item name="item_selectedBackgroundColor">#7289ff</item>
        <item name="item_radius">0dp</item>
        <item name="item_strokeColor">#939393</item>
        <item name="item_selectedStrokeColor">#939393</item>
        <item name="item_strokeWidth">@dimen/flow_stroke_width</item>
        <item name="item_horizontalSpacing">10dp</item>
        <!--这里设置固定大小,padding为0-->
        <item name="item_horizontalPadding">10dp</item>
        <item name="item_verticalPadding">5dp</item>
        <!--单位dp-->
        <item name="item_width">80</item>
        <item name="item_height">40</item>
        <!--限制tag显示长度,规则查看Textview-->
        <item name="item_maxEms">5</item>
        <!--多选-->
        <item name="item_flowChooseable">true</item>
    </style>

    <style name="Anim_SweetToast">
        <item name="android:windowEnterAnimation">@anim/toast_enter_miui</item>
        <item name="android:windowExitAnimation">@anim/toast_exit</item>
    </style>
</resources>
